@model RegisterVM


<partial name="_Notification" />

<div class="card shadow mb-4">
    <div class="card-header  text-center">
        <h4 class="m-0 font-weight-bold text-primary">Edit USer</h4>
    </div>
    <div class="card-body">
        <form enctype="multipart/form-data" asp-action="EditUser" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <input asp-for="Id" type="hidden" />
            <div class="form-group row">
                <div class="col-sm-6 mb-3 mb-sm-0">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" id="firstName">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col-sm-6">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" id="lastName">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-6 mb-3 mb-sm-0">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" id="email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-sm-6">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" id="phoneNumber">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-6 mb-3 mb-sm-0">
                    <label asp-for="Signature" class="control-label"></label>
                    <input asp-for="SignatureFile" class="form-control-file" id="signature">
                    <span asp-validation-for="SignatureFile" class="text-danger"></span>
                </div>
                <div class="col-sm-6">
                    <label asp-for="Role" class="control-label"></label>
                    <select class="form-control form-select" id="role" asp-for="Role" asp-items="Model.Roles">
                        <option disabled selected>Select Role</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-6 mb-3 mb-sm-0">
                    <label asp-for="CanApproved" class="text-success mr-2">Can Approve</label>
                    <input asp-for="CanApproved" id="canApprovedInput" type="checkbox">
                    <span asp-validation-for="CanApproved" class="text-danger"></span>
                </div>
                <div class="col-sm-6">
                    <label asp-for="CanRequestForSomeone" class="text-success mr-2">Request For Someone</label>
                    <input asp-for="CanRequestForSomeone" id="CanRequestForSomeoneInput" type="checkbox">
                    <span asp-validation-for="CanRequestForSomeone" class="text-danger"></span>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Edit User</button>
                <a class="btn btn-primary btn-light" asp-action="Index" asp-controller="UserRoles"><i class="fas fa-arrow-left"></i> Back To List</a>
            </div>
        </form>
    </div>
</div>
