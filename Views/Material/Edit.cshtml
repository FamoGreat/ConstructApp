@model Material

<div class="card shadow mb-4">
    <div class="card-header text-center">
        <h4 class="m-0 font-weight-bold text-primary">Edit Material</h4>
    </div>
    <div class="card-body">
        <form asp-action="Edit" asp-controller="Material" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Code"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitOfMeasurement"></label>
                <select asp-for="UnitOfMeasurement" class="form-control">
                    @foreach (var unit in Enum.GetValues(typeof(UnitOfMeasurement)))
                    {
                        <option value="@unit">@unit</option>
                    }
                </select>
                <span asp-validation-for="UnitOfMeasurement" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Update Material</button>
        </form>
    </div>
</div>
