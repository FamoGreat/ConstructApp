@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title text-center"><strong>Create an Account</strong></h4>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="forms-sample" style="background-color: white">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-group">
                        <label asp-for="Input.Name" class="form-label"></label>
                        <input asp-for="Input.Name" class="form-control" placeholder="Twalibu Ismail">
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>

                <div class="form-group row">
                    <div class="col-sm-6 mb-3 mb-sm-0">
                        <label asp-for="Input.Email" class="form-label"></label>
                        <input asp-for="Input.Email" class="form-control" placeholder="example12@gmail.com">
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="Input.PhoneNumber" class="form-label"></label>
                        <input asp-for="Input.PhoneNumber" class="form-control" placeholder="0746555500">
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
               
                <div class="form-group row">
                    <div class="col-sm-6 mb-3 mb-sm-0">
                        <label asp-for="Input.Password" class="form-label"></label>
                        <input asp-for="Input.Password" class="form-control">
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control">
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Role" class="form-label"></label>
                    <div class="col-sm-6">
                        <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-control form-select">
                            <option disabled selected>-- Select Role --</option>
                        </select>
                    </div>
                    <span asp-validation-for="Input.Role" class="text-danger"></span>
                </div>
                <button id="registerSubmit" type="submit" class="btn btn-primary btn-block">
                    Register Account
                </button>
            </form>

        </div>
    </div>
</div>
<div class="container">

</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


